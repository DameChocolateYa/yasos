piramide = (rows: int):
	colorterm("yellow");

	let i: int = 1;
	let k: int = 0;
	while (i lte rows) do {
		let space: int = 1;
		let x: int = rows - i;
		while (space lte x) do {
			" ";
			inc space;
		}

		x = 2 * i;
		x -= 1;
		while (k neq x) do {
			"*";
			inc k;
		}
		"", ln;
		inc i;
		k = 0;
	}
endfn

